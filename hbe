-- HBE SCRIPT (supports toggle ON/OFF)

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- CONFIG
local HITBOX_SIZE = Vector3.new(8, 8, 8)
local DEFAULT_SIZE = Vector3.new(2, 2, 1)

getgenv().HBE_ENABLED = getgenv().HBE_ENABLED or false

local function applyHitbox(character)
 local hrp = character:FindFirstChild("HumanoidRootPart")
 if not hrp then return end

 hrp.Size = HITBOX_SIZE
 hrp.Transparency = 0.5
 hrp.Material = Enum.Material.ForceField
 hrp.CanCollide = false
end

local function resetHitbox(character)
 local hrp = character:FindFirstChild("HumanoidRootPart")
 if not hrp then return end

 hrp.Size = DEFAULT_SIZE
 hrp.Transparency = 1
 hrp.Material = Enum.Material.Plastic
end

local function updatePlayer(player)
 if player == LocalPlayer then return end
 if not player.Character then return end

 if getgenv().HBE_ENABLED then
  applyHitbox(player.Character)
 else
  resetHitbox(player.Character)
 end
end

-- Loop updater (IMPORTANT)
task.spawn(function()
 while task.wait(0.5) do
  for _, player in pairs(Players:GetPlayers()) do
   updatePlayer(player)
  end
 end
end)
